<% layout("layouts/boilerplate") %>
<body>
    <div class="container mt-5 mb-5">
        <h2 class="mb-4 text-center text-black">Edit This Listing</h2>
        <form action="/listings/<%= listing._id %>?_method=PUT" method="post" class="row g-3 needs-validation"  novalidate  enctype="multipart/form-data" >
            <!-- Title -->
            <div class="col-12">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" class="form-control" placeholder="Enter title" name="listing[title]" value="<%= listing.title %>" required >
                <div class="invalid-feedback">
                    Title name should be valid
                </div>
            </div>
            
            <% const categories = ["Beachfront", "House", "Iconic City", "Mountain", "Castle", "Amazing Pool", "Camping", "Farm", "Arctic", "Other"]; %>

            <div class="col-12">
                <label for="category" class="form-label">Category <span class="text-danger">*</span></label>
                <select id="category" class="form-select" name="listing[category]" required>
                    <option value="" disabled <%= !listing.category ? "selected" : "" %>>Select a category</option>
                    <% categories.forEach(cat => { %>
                        <option value="<%= cat %>" <%= listing.category === cat ? "selected" : "" %>><%= cat %></option>
                    <% }) %>
                </select>
                <div class="invalid-feedback">
                    Please select a category
                </div>
            </div>

            <!-- Description -->
            <div class="col-12">
                <label for="description" class="form-label">Description</label>
                <textarea id="description" class="form-control" name="listing[description]" placeholder="Enter description" rows="3" required ><%= listing.description %></textarea>
                <div class="invalid-feedback">
                    Please enter a short description
                </div>
            </div>
            
            <div class="mb-3" style="width: 200px; height: 200px; overflow: hidden;">
                <h5>Orignal Image</h5>
                <img src="<%= originalImgUrl %>" alt="listing image" class="img-fluid w-100 h-100 object-fit-cover"/>
            </div>
            
            

            <!-- Image URL -->
            <div class="col-12">
                <label for="image" class="form-label">Upload New Image</label>
                <input type="file" id="image" class="form-control" placeholder="Enter image URL/link" name="listing[image]">
            </div>
            
            <!-- Price -->
            <div class="col-md-6">
                <label for="price" class="form-label">Price</label>
                <input type="number" id="price" class="form-control" placeholder="Enter price" name="listing[price]" value="<%= listing.price %>" min="0" step="0.01" required >
                <div class="invalid-feedback">
                    Price should be valid
                </div>
            </div>
            
            <!-- Country -->
            <div class="col-md-6">
                <label for="country" class="form-label">Country</label>
                <input type="text" id="country" class="form-control" placeholder="Enter country" name="listing[country]" value="<%= listing.country %>" required >
                <div class="invalid-feedback">
                    Country name should be valid
                </div>
            </div>
            
            <!-- Location -->
            <div class="col-12">
                <label for="location" class="form-label">Location</label>
                <input type="text" id="location" class="form-control" placeholder="Enter location" name="listing[location]" value="<%= listing.location %>" required >
                <div class="invalid-feedback">
                    Location should be valid
                </div>
            </div>
            
            <!-- Submit Button -->
            <div class="col-12">
                <button type="submit" class="btn btn-danger btn-sm">Edit Listing</button>
            </div>
        </form>
    </div>

    <script src="/JS/script.js"></script>
</body>
